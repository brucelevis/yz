-- 全局的商店容器
cglobalshopdb = class("cglobalshopdb")

function cglobalshopdb:init(pid)
	self.pid = pid
	self.grocery = cgroceryshop.new({
		pid = pid,
		name = "grocery",
	})
end

function cglobalshopdb:onlogin(player)
	for name in pairs(data_1401_GlobalShopCtrl) do
		local shop = self[name]
		if shop and shop.onlogin then
			shop:onlogin(player)
		end
	end
end

function cglobalshopdb:onlogoff(player,reason)
	for name in pairs(data_1401_GlobalShopCtrl) do 
		local shop = self[name]
		if shop and shop.onlogoff then
			shop:onlogoff(player,reason)
		end
	end
end

return cglobalshopdb
